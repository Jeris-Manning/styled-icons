{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@styled-icons/*",
    "tools/*",
    "website"
  ],
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "yarn build:icons && yarn build:website",
    "build:icons": "./build.sh",
    "build:website": "lerna run build --scope @styled-icons/website",
    "clean": "lerna run clean --stream",
    "format": "prettier --write './**/*.{ts,tsx,js,md,json}'",
    "format:check": "prettier --list-different './**/*.{ts,tsx,js,md,json}'"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.6",
    "@changesets/cli": "^2.9.1",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/styled-components": "^5.1.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5"
  }
}
